<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="android.cadi.kakaotalk_m.activities.PersonProfileActivity"
    android:gravity="center_horizontal">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_width="1080"
        app:scale_base_height="1920">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scale_width="1080"
            app:scale_height="1200"
            android:background="@drawable/default_profile"
            android:id="@+id/profile_background_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="600"
            app:scale_height="400"
            app:scale_top="50"
            android:gravity="center"
            android:maxLines="2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/White"
            android:text="대화명"
            android:id="@+id/ProfileStatusMsg"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="250"
            app:scale_height="250"
            app:scale_top="1100"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/default_profile"
            android:id="@+id/profile_img_detail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="600"
            app:scale_height="200"
            app:scale_top="1400"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center"
            android:id="@+id/ProfileName"
            android:text="김이름"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profilemenu"
            app:scale_width="1080"
            app:scale_height="300"
            app:scale_top="1600"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
