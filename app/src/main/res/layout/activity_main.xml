<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.cadi.kakaotalk_m.activities.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7"
        android:paddingLeft="60dp"
        android:textSize="20sp"
        android:background="#4a2f31"
        android:textColor="@color/Yellow"
        android:id="@+id/friends_count"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 "
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:background="#4a2f31"
        android:textColor="@color/White"

        android:id="@+id/friends_top"/>

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/friends_top"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="@color/White"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/Gray"
        app:tabSelectedTextColor="#4a2f31"
        app:tabIndicatorColor="#4a2f31">


    </android.support.design.widget.TabLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/empty_view"
        android:layout_below="@+id/tabs"/>

</RelativeLayout>
